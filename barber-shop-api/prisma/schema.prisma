generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://felipe:docker@localhost:5432/barber_shop?schema=public"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      String   @default("CLIENT") // CLIENT ou ADMIN
  createdAt DateTime @default(now())
  
  appointments Appointment[] // Um usuário pode ter vários agendamentos

  @@map("users")
}

model Service {
  id          String   @id @default(uuid())
  name        String
  description String
  price       Decimal
  duration    Int      // Duração em minutos (ex: 30, 60)
  
  appointments Appointment[]

  @@map("services")
}

model Appointment {
  id        String   @id @default(uuid())
  date      DateTime
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  serviceId String
  service   Service  @relation(fields: [serviceId], references: [id])

  @@map("appointments")
}